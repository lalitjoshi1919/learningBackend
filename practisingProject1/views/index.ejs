<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="main w-full min-h-screen bg-zinc-900">
      <div class=" text-white form p-10">
        <form action="/create" method="post">
          <input
            class="block px-5 w-full rounded-md m-2 bg-zinc-800 outline-none"
            type="text"
            placeholder="Title goes here"
            name="title"
          />
          <textarea
            class="block px-5 w-full rounded-md m-2 bg-zinc-800 resize-none"
            placeholder="Write your tasks"
            name="details"
          ></textarea>
          <input
            class="m-2 bg-blue-800 rounded px-3"
            type="submit"
            value="Create task"
          />
        </form>
      </div>

      <div class="tasks flex flex-wrap p-10">
        <%if(files.length>0){%> <%files.forEach(function(val){%>
        <div class="task w-72 px-3 py-4 bg-zinc-800 rounded-md mx-3">
          <h1 class="text-white tex-3xl tracking-tighter"><%= val %></h1>
          <a class="text-blue-800" href="/file/<%= val %>">Read more...</a>
        </div>
        <%})%> <% }else{%>
        <h1 class="text-zinc-400"> No task here </h1>
        <% }%>
      </div>
    </div>
  </body>
</html>
